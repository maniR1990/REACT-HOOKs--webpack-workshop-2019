{
   "extends" : [
       "eslint:recommended",
       "plugin:import/errors",
       "plugin:react/recommended",
       "plugin:jsx-ally/recommended",
       "prettier",
       "prettier/react"

   ],
   "rules": {
       "react/prop-types": 0,
       "react-hooks/rules-of-hooks": "error"
   },
   "plugins":["react", "import", "jsx-ally", "react-hooks"],
   "parser" : "babel-eslint",
   "parserOptions" : {
       "ecmaVersion" : 2018,
       "sourceType" : "module",
       "ecmaFeatures":{
           "jsx":true
       }
   },
   "env" : {
       "es6" : true,
       "browser" : true,
       "node": true
   }
}